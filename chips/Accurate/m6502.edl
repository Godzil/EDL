INSTRUCTION	"DCP %M0"	opcodeDCP
{
	IF opcodeDCP
	{
		MEMSTORE<-TMP;
		NEXT PIN_O0.MW.MODIFY;
	}

	IF PIN_O0.MW.MODIFY@
	{
		TMP - 1->TMP;
		AFFECT z AS ZERO, n AS SIGN, c AS NOCARRY(7) { A - TMP};
		MEMSTORE<-TMP;
	}

	IF PIN_O0.MW.WRITE@
	{
		NEXT PIN_O0.FETCH;
	}
}



	%010	"TAX"		AFFECT z AS ZERO,n AS SIGN { A }->X;
	%011	"TSX"		AFFECT z AS ZERO,n AS SIGN { S }->X;
	%100	"DEX"		AFFECT z AS ZERO,n AS SIGN { X - 1 }->X;
